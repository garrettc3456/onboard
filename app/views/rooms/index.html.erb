<h2>Rooms</h2>

<% @rooms.each do |room| %>
<!-- we have updated this in order to make both the pic and text as links -->
	<div class="room">
		<%= link_to room_path(room) do %>
			<%= image_tag room.image(:thumbnail) %>
			<h3><%= room.name %></h3>
		<% end %>
	</div>

<% end %>

<%= link_to "Add a new room", new_room_path %>